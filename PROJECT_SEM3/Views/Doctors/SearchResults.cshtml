@model List<PROJECT_SEM3.ViewModels.DoctorViewModel>

<div class="container mt-4">
    <h2>Search Results</h2>
    @if (Model.Count == 0)
    {
        <p>No results found for your search query.</p>
    }
    else
    {
        <div class="row">
            @foreach (var doctor in Model)
            {
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <img src="@doctor.Thumbnail" class="card-img-top" alt="@doctor.FullName" />
                        <div class="card-body">
                            <h5 class="card-title">@doctor.FullName</h5>
                            <p>@doctor.Locations</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
