@using System.Security.Claims
@model IEnumerable<Users>

<div class="chat-users-container">
    @foreach (var user in Model)
    {
        <div class="chat-user d-flex align-items-center p-3 border-bottom position-relative" 
             data-user-id="@user.Id">
            <div class="user-avatar-wrapper position-relative me-3">
                @if (!string.IsNullOrEmpty(user.Thumbnail))
                {
                    <img src="@user.Thumbnail" 
                         class="user-avatar rounded-circle" 
                         style="width: 48px; height: 48px; object-fit: cover"
                         alt="@user.FullName">
                }
                else
                {
                    <div class="user-avatar rounded-circle d-flex align-items-center justify-content-center bg-primary text-white"
                         style="width: 48px; height: 48px; font-size: 1.2rem;">
                        @user.FullName[0]
                    </div>
                }
                <span class="offline-indicator position-absolute"
                      data-user-id="@user.Id"
                      style="width: 12px; height: 12px; 
                             background-color: #dc3545;
                             border: 2px solid white;
                             border-radius: 50%;
                             bottom: 0;
                             right: 0;">
                </span>
            </div>
            
            <div class="flex-grow-1 min-width-0">
                <div class="d-flex justify-content-between align-items-center mb-1">
                    <h6 class="mb-0 text-truncate">@user.FullName</h6>
                    <span class="unread-badge badge bg-primary rounded-pill d-none">0</span>
                </div>
                <small class="text-muted last-message text-truncate d-block">
                    <!-- Last message will be inserted here via JavaScript -->
                </small>
            </div>
        </div>
    }
</div>