@model IEnumerable<PROJECT_SEM3.ViewModels.PostViewModel>

<h2>All Posts</h2>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var post in Model)
        {
            <tr>
                <td><a asp-action="Details" asp-route-id="@post.Id">@post.FullName</a></td>
                <td>@post.CreatedAt.ToString("g")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@post.Id">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create">Create New Post</a>
