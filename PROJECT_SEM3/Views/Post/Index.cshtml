@model IEnumerable<PROJECT_SEM3.ViewModels.PostViewModel>

<div class="container-custom">
<h2 class="text-primary mb-4">All Posts</h2>
<table class="table table-hover table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Title</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var post in Model)
        {
                <tr>
                    <td><a asp-action="Details" asp-route-id="@post.Id" class="text-decoration-none text-primary">@post.FullName</a></td>
                    <td>@post.CreatedAt.ToString("g")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@post.Id" class="btn btn-info btn-sm">View</a>
                    </td>
                </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Create New Post</a>
</div>